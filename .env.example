# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Configuration
# Recommended: OpenAI GPT-3.5 Turbo (requires $5 credit on OpenRouter)
# - openai/gpt-3.5-turbo (RECOMMENDED - reliable, fast, ~$0.001/question)
# - openai/gpt-4o-mini (higher quality, ~$0.003/question)
#
# Free alternatives (may be rate-limited):
# - deepseek/deepseek-r1-distill-llama-70b:free
# - deepseek/deepseek-r1-distill-qwen-14b:free
LLM_MODEL=openai/gpt-3.5-turbo
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# RAG Configuration
RAG_TOP_K=5

# Flask Configuration
FLASK_DEBUG=False
PORT=5000

# Memory Optimization (for low-RAM environments like Render free tier)
TOKENIZERS_PARALLELISM=false
OMP_NUM_THREADS=1
MKL_NUM_THREADS=1

# Optional: Use OpenAI instead of OpenRouter
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-3.5-turbo

# Optional: Cohere API for embeddings (if using Cohere instead of sentence-transformers)
# COHERE_API_KEY=your_cohere_api_key_here
