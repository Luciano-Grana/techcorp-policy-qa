# OpenRouter API Configuration
# Get your API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# LLM Configuration
# OpenRouter free models (as of 2025):
# - google/gemini-2.0-flash-exp:free (RECOMMENDED - fast and capable)
# - deepseek/deepseek-r1:free
# - google/gemini-2.5-flash-image-preview:free
LLM_MODEL=google/gemini-2.0-flash-exp:free
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# RAG Configuration
RAG_TOP_K=5

# Flask Configuration
FLASK_DEBUG=False
PORT=5000

# Optional: Use OpenAI instead of OpenRouter
# OPENAI_API_KEY=your_openai_api_key_here
# LLM_MODEL=gpt-3.5-turbo

# Optional: Cohere API for embeddings (if using Cohere instead of sentence-transformers)
# COHERE_API_KEY=your_cohere_api_key_here
